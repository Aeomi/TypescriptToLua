{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "align": [true, "parameters", "statements", "arguments", "members", "elements"],
        "class-name": true,
        "no-bitwise": false,
        "indent": [true, "spaces", 4],
        "max-classes-per-file": 1,
        "max-line-length": [true, 120],
        "no-console": [true, "error"],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "always"
                },
                "esSpecCompliant": true
            }
        ],
        "interface-name": false
    },
    "rulesDirectory": []
}
